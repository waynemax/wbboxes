{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "printWidth": 120,
  "quoteProps": "consistent",
  "endOfLine": "auto",
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": false,
  "jsxBracketSameLine": true,
  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.md"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    }
  ]
}
